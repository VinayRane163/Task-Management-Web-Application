@model TMS.Controllers.Userdata
 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Style.css" />
    <style>
        .centered {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .main-cont {
            padding: 1rem;
        }

        .form-container {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="main-cont d-flex align-items-center justify-content-center">
        <div class="container p-3 form-container mt-3 bg-light border rounded">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                <div align="center" >
                    <h2>Login</h2>
                </div>
                <br />
                <div class="form-group">
                    @Html.TextBoxFor(model => model.LoginName, null, new { @class = "form-control", placeholder = "Username", required = "required" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Password", type = "password", required = "required" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </div>
                <div align="center">
                    @Html.ActionLink("Register", "Register", "Account")
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
</body>
</html>
